<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appointment_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Appointment Details"
            android:textSize="15dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textStyle="bold|italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            app:fontFamily="@font/amaranth_bold_italic"
            android:text="Applicant Full Name:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:hint="Male/Female"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Gender"
            android:layout_marginLeft="10dp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/amaranth_bold_italic"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="Preffered date &amp; time of Appoitment"
            android:textSize="15dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:inputType="date"
            android:layout_marginTop="280dp"
            android:hint="dd/mm/yy"
            android:layout_marginLeft="10dp"

            />
        <EditText
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="180dp"
            android:hint="hh:mm:ss"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:text="Police Station Details:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textStyle="bold|italic"
            />
