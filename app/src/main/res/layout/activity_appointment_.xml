<!--            />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:text="District:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textStyle="bold|italic"
            />
        <Spinner
            android:id="@+id/district_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/districts_array"
            android:layout_marginTop="390dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:text="Police Station:"
            android:layout_marginLeft="10dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            />
        <Spinner
            android:id="@+id/policestation_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="460dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:text="Reason for Appointment:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            app:fontFamily="@font/amaranth_bold_italic"
            android:textStyle="bold|italic"
            />

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="550dp" />

        <Button

            android:id="@+id/submit_appointment"
            android:layout_width="117dp"
            android:layout_height="103dp"
            android:background="@drawable/submit"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="750dp"/>

        <TextView
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="853dp"
            android:gravity="center"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/amaranth_bold_italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="880dp"
            android:gravity="center"/>

    </RelativeLayout>


</ScrollView>